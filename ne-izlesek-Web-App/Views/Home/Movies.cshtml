@model ne_izlesek_Web_App.Models.MoviesModel.MovieIndexViewModel

@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="sub_page">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>MOVIES</h2>
            <p>Explore our collection of movies.</p>
        </div>
        <div class="row" id="movieContainer">
            @foreach (var film in Model.Filmler)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow mr-6 mb-6">
                        <img src="~/images/godfather.jpg" class="card-img-top" alt="@film.NameOfMovie">
                        <div class="card-body">
                            <h5 class="card-title"><a href="@Url.Action("Details", "Movie", new { id = film.Id })">@film.NameOfMovie</a></h5>
                            <ul class="list-unstyled">
                                <li><strong>Year:</strong> @film.YearOfRelease</li>
                                <li><strong>Watchtime:</strong> @film.Watchtime</li>
                                <li class="movie_rating"><strong>Rating:</strong> @film.MovieRating</li>
                                <li><strong>Genre:</strong> @film.Genre</li>
                                <li><strong>Votes:</strong> @film.Votes</li>
                                <li><strong>MetaScore:</strong> @film.Metascore</li>
                                <li><strong>Gross Collection:</strong> @film.GrossCollection</li>
                                <li><strong>Director:</strong> @film.Director</li>
                            </ul>
                            <p class="card-text">@film.Description</p>
                        </div>
                    </div>
                </div>
            }           
        </div>
        <div class="text-center  text-black" id="paginationContainer">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link text-black" href="javascript:void(0);" onclick="loadMovies(@i)">@i</a>
                    </li>
                }
            </ul>
        </div> 
    </div>
</body>

    <!-- jQuery CDN eklemek için örnek -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <!-- nice select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js" integrity="sha256-Zr3vByTlMGQhvMfgkQ5BtWRSKBGa2QlspKYJnkjZTmo=" crossorigin="anonymous"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>

    <script>
    function loadMovies(page) {
        $.ajax({
            url: '@Url.Action("Movies", "Home")',
            type: 'GET',
            data: { page: page },
            success: function (result) {
                // Tüm sayfa içeriğini güncelle
                $('body').html(result);

                // Sayfanın en üstüne smooth bir şekilde atla
                $('html, body').animate({ scrollTop: 0 }, '100');
            },
            error: function (error) {
                console.log(error);
            }
        });
    }


    </script>
