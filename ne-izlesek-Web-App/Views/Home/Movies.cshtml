@model ne_izlesek_Web_App.Models.MoviesModel.MovieIndexViewModel

@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="sub_page">
    <div class="container">
        <div class="row" id="movieContainer">
            @foreach (var film in Model.Filmler)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow mr-3 mb-3">
                        <img src="~/images/shawshank.jpg" class="card-img-top" alt="@film.NameOfMovie">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="#" class="open-modal" data-id="@film.Id">@film.NameOfMovie</a>
                            </h5>
                            <ul class="list-unstyled">
                                <li><strong>Yıl:</strong> @film.YearOfRelease</li>
                                <li><strong>Süre:</strong> @film.Watchtime min</li>
                                <li class="movie_rating"><strong>IMDB:</strong> @film.MovieRating</li>
                                <li><strong>Tür:</strong> @film.Genre</li>
                                <li><strong>Yönetmen:</strong> @film.Director</li>
                            </ul>
                            <button class="btn btn-secondary btn-sm btn-open-details" data-id="@film.Id">Detaylar</button>

                        </div>
                    </div>
                </div>

                <!-- Her bir film için detay modal -->
                <div class="modal fade custom-modal" id="detayModal-@film.Id" tabindex="-1" role="dialog" aria-labelledby="detayModalLabel-@film.Id" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content custom-modal-content">
                            
                            <div class="modal-body custom-modal-body">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <div class="row">
                                    <div class="col-md-12 col-lg-6 text-center">
                                        <div class="film-poster-container">
                                            <img src="~/images/godfather.jpg" class="img-fluid rounded film-poster" alt="@film.NameOfMovie">
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-6">
                                        <h2 class="modal-title mb-4">@film.NameOfMovie</h2>
                                        <ul class="list-unstyled custom-list">
                                            <li><strong>Yıl:</strong> @film.YearOfRelease</li>
                                            <li><strong>Süre:</strong> @film.Watchtime min</li>
                                            <li class="movie_rating"><strong>IMDB:</strong> @film.MovieRating</li>
                                            <li><strong>Tür:</strong> @film.Genre</li>
                                            <li><strong>Oy:</strong> @film.Votes</li>
                                            <li><strong>MetaScore:</strong> @film.Metascore</li>
                                            <li><strong>Brüt Hasılat:</strong> @film.GrossCollection</li>
                                            <li><strong>Yönetmen:</strong> @film.Director</li>
                                            <p>@film.Description</p>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="text-center" id="paginationContainer">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="javascript:void(0);" onclick="loadMovies(@i)">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- jQuery CDN eklemek için örnek -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- nice select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js" integrity="sha256-Zr3vByTlMGQhvMfgkQ5BtWRSKBGa2QlspKYJnkjZTmo=" crossorigin="anonymous"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>

    <script>
        function loadMovies(page) {
            $.ajax({
                url: '@Url.Action("Movies", "Home")',
                type: 'GET',
                data: { page: page },
                success: function (result) {
                    // Tüm sayfa içeriğini güncelle
                    $('body').html(result);

                    // Sayfanın en üstüne smooth bir şekilde atla
                    $('html, body').animate({ scrollTop: 0 }, '100');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

        // Event delegation for .open-modal and .btn-open-details
        $(document).on('click', '.open-modal', function (e) {
            e.preventDefault();
            var filmId = $(this).data('id');
            openDetayModal(filmId);
        });

        $(document).on('click', '.btn-open-details', function (e) {
            e.preventDefault();
            var filmId = $(this).data('id');
            openDetayModal(filmId);
        });

        function openDetayModal(id) {
            var modalSelector = '#detayModal-' + id;
            $(modalSelector).modal('show');

            // Modal içeriğini güncelledikten sonra kapatma butonlarına etkiyi tekrar aktive et
            $(modalSelector).find('.close').click(function () {
                $(modalSelector).modal('hide');
            });
        }


        $(document).on('click', '.btn-open-details', function (e) {
            e.preventDefault();
            var filmId = $(this).data('id');
            openDetayModal(filmId);
        });

        function openDetayModal(id) {
            var modalSelector = '#detayModal-' + id;
            $(modalSelector).modal('show');

            // Modal içeriğini güncelledikten sonra kapatma butonlarına etkiyi tekrar aktive et
            $(modalSelector).find('.close').click(function () {
                $(modalSelector).modal('hide');
            });
        }
</script>

</body>
